<h1>Profile</h1>

<p>
From here you can update your profile.
</p>

<%= form_with(url: "/user", method: "post") do %>
  <label>Name:</label>
  <input type="text" name="name" value="<%= @user.name %>"/>
  <br />

  <label>Island Name:</label>
  <input type="text" name="island_name" value="<%= @user.island_name %>"/>
  <br />

  <label>Character Name:</label>
  <input type="text" name="character_name" value="<%= @user.character_name %>"/>
  <br />

  <button type="submit">Save</button>
<% end %>
